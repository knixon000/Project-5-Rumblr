<% if @user %>
  <div class="ui raised segment" id="feed">
    <form method="POST" action="/users/posts">
      <textarea name="text_entry" rows="8" cols="80"></textarea>
      <textarea name="tags" rows="1" cols="80"></textarea>
      <br>
      <button class="ui button" type="submit">
        Post
      </button>
    </form>
  </div>
  <div class="ui raised segment" id="feed">
    <% @all_posts.each do |Post| %>
      <p><%= @_post %></p>
    <% end %>
  </div>
<% end %>
