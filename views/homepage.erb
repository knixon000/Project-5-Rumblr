
<% if @user %>
  <div class="ui raised segment" id="feed">
    <form class="ui form" method="POST" action="/users/posts">
      <div class="field">
        <textarea name="text_entry" required></textarea>
        </div>
      <div class="field">
        <input name="tags" rows="2" required></input>
      </div>
      <br>
      <button class="ui button" type="submit">
        Post
      </button>
    </form>
  </div>
  <div class="ui raised segment" id="feed">
    <% @all_posts.reverse_each do |posts| %>
      <h4><a href="/user_profile/<%= posts.user.id%>"><%= posts.user.first_name + " " + posts.user.last_name %></a></h4>
      <p><%= posts.text_entry %></p>
      <p><%= posts.tag %></p>
      <div class="ui fitted divider"></div>
    <% end %>
  </div>

<% end %>
